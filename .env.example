AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_RETRY_MODE=adaptive
AWS_MAX_ATTEMPTS=20
CLAUDE_CODE_USE_BEDROCK=1
