{
  "name": "feedmob-adpilot-mcp",
  "version": "1.0.0",
  "type": "module",
  "description": "FeedMob AdPilot MCP - Conversational advertising assistant",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:reset": "tsx src/db/reset.ts",
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose down",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "mcp:dev": "npx fastmcp dev src/index.ts",
    "mcp:inspect": "npx fastmcp inspect src/index.ts"
  },
  "keywords": [
    "mcp",
    "advertising",
    "ai",
    "fastmcp"
  ],
  "author": "FeedMob",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.0",
    "@mcp-ui/server": "^5.13.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "fastmcp": "^3.23.1",
    "google-auth-library": "^10.5.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.11.0",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^8.56.0",
    "fast-check": "^3.15.0",
    "prettier": "^3.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  }
}
